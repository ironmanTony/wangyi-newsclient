<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_three_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignLeft="@+id/list_item_three_comments"
        style="@style/list_item_title"
        />

    <TextView
        android:id="@+id/list_item_three_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        style="@style/list_item_content"
        />

    <LinearLayout
        android:layout_below="@id/list_item_three_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_image_height" >
        
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/list_item_three_image1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_weight="1"
            />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/list_item_three_image2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/list_item_margin"
            android:layout_weight="1"
            />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/list_item_three_image3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/list_item_margin"
            android:scaleType="fitXY"
            android:layout_weight="1"
            />
        </LinearLayout>

</RelativeLayout>